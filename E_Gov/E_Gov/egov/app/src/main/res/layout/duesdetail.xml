<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:padding="5dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
             android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="5dp"
            android:id="@+id/back"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Consumer Detail"
            android:textSize="20sp"
            android:textColor="#2782F5"
            android:layout_centerInParent="true"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@mipmap/logt" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2782F5"
            android:textSize="16sp"
            android:text="Service"
            android:id="@+id/servicehint"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/et_service"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:textColor="#2782F5"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/servicehint"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bodergrey"
            android:layout_below="@+id/et_service"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2782F5"
            android:textSize="16sp"
            android:text="ULB"
            android:id="@+id/ulbhint"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/et_ulbname"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:textColor="#2782F5"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/ulbhint"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bodergrey"
            android:layout_below="@+id/et_ulbname"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@drawable/shadow" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2782F5"
            android:textSize="16sp"
            android:text="Consumer Name."
             android:id="@+id/hint"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
             android:id="@+id/et_consumer_Name"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:textColor="#2782F5"
            android:layout_marginStart="15dp"
             android:layout_below="@+id/hint"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bodergrey"
            android:layout_below="@+id/et_consumer_Name"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2782F5"
            android:textSize="16sp"
            android:text="Mobile NO"
            android:id="@+id/mblhint"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/et_mobile_no"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:textColor="#2782F5"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/mblhint"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bodergrey"
            android:layout_below="@+id/et_mobile_no"/>
    </RelativeLayout>




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2782F5"
            android:textSize="16sp"
            android:text="EmailAddress"
            android:id="@+id/emailhint"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/et_email_adrs"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:textColor="#2782F5"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/emailhint"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bodergrey"
            android:layout_below="@+id/et_email_adrs"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2782F5"
            android:textSize="16sp"
            android:text="Bill Date"
            android:id="@+id/billhint"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/et_bill_date"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:textColor="#2782F5"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/billhint"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bodergrey"
            android:layout_below="@+id/et_bill_date"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2782F5"
            android:textSize="16sp"
            android:text="Amount Due"
            android:id="@+id/ambhint"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/et_amtdue"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:textColor="#2782F5"
            android:layout_marginStart="15dp"
            android:layout_below="@+id/ambhint"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bodergrey"
            android:layout_below="@+id/et_amtdue"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#2782F5"
            android:textSize="16sp"
            android:text="Pay"
            android:id="@+id/payhint"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Pay Amount."
            android:layout_marginTop="10dp"
            android:textSize="18sp"
            android:inputType="number"
            android:digits="1234567890"
            android:text=""
            android:id="@+id/et_pay"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="15dp"
            android:textColor="#2782F5"
            android:layout_marginStart="15dp"
            android:background="@android:color/transparent"
            android:layout_below="@+id/payhint"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@color/bodergrey"
            android:layout_below="@+id/et_pay"/>
    </RelativeLayout>


    <Button
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="#2782F5"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="18sp"
        android:text="Pay Now"
        android:id="@+id/submit"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="30dp"/>

</LinearLayout>
</ScrollView>